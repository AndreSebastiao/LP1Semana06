using System;
using System.Collections.Generic;
using System.Linq;
using System.Threading.Tasks;

namespace ColorSpheres
{
    private Color color;
    private float radius;
    private interface nTimesThrown;

    public Sphere(ColorSpheres c, float r)
    {
        color = c;
        radius = r;
        nTimesThrown = 0;
    }
}